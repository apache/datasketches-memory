<FindBugsFilter> <!-- memory -->

  <!-- Ignore all test code -->
  <Match>
    <Class name="~.*\.*Test" />
  </Match>

  <!-- Too many false positives to be useful.  I could not make it happy :( -->
  <Match>
    <Bug pattern="SF_SWITCH_NO_DEFAULT" />
  </Match>

  <!-- Complaining about copying of data from one internal class to another. 
       This is harmless since both classes are part of our library internals and work together. -->
  <Match>
    <Bug pattern="EI_EXPOSE_REP"/>
    <Or>
      <Class name="org.apache.datasketches.memory.internal.WritableDirectHandleImpl"/>
      <Class name="org.apache.datasketches.memory.internal.WritableMapHandleImpl"/>
      <Class name="org.apache.datasketches.memory.internal.MapHandleImpl"/>
    </Or>
  </Match>
  
  <Match> <!-- False Positive: Code is the recommended solution for preventing a Finalizer Attack. -->
    <Bug pattern="CT_CONSTRUCTOR_THROW" />
    <Class name="org.apache.datasketches.memory.internal.AllocateDirectMap"/>
  </Match>
  
</FindBugsFilter>

